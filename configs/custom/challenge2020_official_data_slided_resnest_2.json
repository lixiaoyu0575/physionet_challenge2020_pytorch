{
    "name": "challenge2020_official_data_slided_cnn",
    "n_gpu": 2,
    "arch": {
        "type": "resnest",
        "args": {
           "layers": [3, 4, 2, 3],
            "bottleneck_width": 64,
            "stem_width": 16,
           "num_classes": 108,
            "kernel_size": 15
        }
    },

    "data_loader": {
        "type": "ChallengeDataLoader0",
        "args":{
            "label_dir": "/data/ecg/raw_data/challenge2020/all_data",
            "data_dir": "/data/ecg/challenge2020/All_data_resampled_to_300HZ_and_slided_n_segment=1",
            "batch_size": 128,
            "shuffle": true,
            "split_index": "process/data_split/split1.mat",
            "num_workers": 6
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
     "loss": {
        "type":"bce_with_logits_loss"
    },
    "metrics":
    [
        "accuracy",
        "f_measure",
        "macro_f_beta_measure",
        "macro_g_beta_measure",
        "macro_auroc",
        "macro_auprc",
        "challenge_metric"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 1000,

        "save_dir": "/data/ecg/challenge2020/saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true,
        "only_scored_class": true
    },
    "evaluater": {
        "result_dir": "saved/",
        "verbosity": 2,
        "visualization": {
            "scatter": true
        }
    }
}
