{
    "name": "Challenge2020_InceptionTimeV2",
    "n_gpu": 1,
    "arch": {
        "type": "InceptionTimeV2",
        "args": {
            "in_channels": 12,
            "num_classes": 9,
            "n_filters": 32,
            "kernel_sizes": [9, 19, 39],
            "bottleneck_channels": 32
        }
    },

    "data_loader": {
        "type": "ChallengeDataLoader3",
        "args":{
            "data_dir": "/home/weiyuhua/Data/raw-data",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.1,
            "test_split": 0.1,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "bce_loss",
    "metrics":
    [
        "accuracy",
        "f_measure",
        "f_beta",
        "g_beta",
        "auroc",
        "auprc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    },
    "evaluater": {
        "result_dir": "saved/",
        "verbosity": 2,
        "visualization": {
            "scatter": true
        }
    }
}
