{
    "name": "challenge2020_official_data_slided_tcn",
    "n_gpu": 1,
    "arch": {
        "type": "TCN",
        "args": {
           "input_size": 12,
            "output_size": 108,
            "num_channels": [32, 32, 32, 32],
            "kernel_size": 7,
            "dropout": 0.2
        }
    },

    "data_loader": {
        "type": "ChallengeDataLoader1",
        "args":{
            "label_dir": "/home/weiyuhua/Data/challenge2020",
            "data_dir": "/home/weiyuhua/Data/All_data_resampled_to_500HZ_and_filtered_slided_n_segment=1_meanIR=100",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.05,
            "test_split": 0.05,
            "num_workers": 6
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "bce_loss",
    "metrics":
    [
        "accuracy",
        "f_measure",
        "macro_f_beta_measure",
        "macro_g_beta_measure",
        "macro_auroc",
        "macro_auprc",
        "challenge_metric"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    },
    "evaluater": {
        "result_dir": "saved/",
        "verbosity": 2,
        "visualization": {
            "scatter": true
        }
    }
}
