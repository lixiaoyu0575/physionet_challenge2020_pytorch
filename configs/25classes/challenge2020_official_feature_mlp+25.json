{
    "name": "challenge2020_official_feature_mlp+25",
    "n_gpu": 1,
    "arch": {
        "type": "MLP",
        "args": {
            "input_dim":11560,
            "num_classes": 25,
            "n_hid":[1000, 1000, 1000]
        }
    },

    "data_loader": {
        "type": "ChallengeDataLoader5",

        "args":{
             "data_dir": "/DATASET/challenge2020_Feature/new_data_extreme/Out_extreme.csv",
            "label_dir": "/DATASET/challenge2020/new_data/All_data_new",

            "batch_size": 64,
            "shuffle": true,
            "split_index": "process/data_split/split1.mat",
            "num_workers": 0,
            "_25classes": true
        }
    },
    "zhushi":
    {
            "data_dir": "/home/weiyuhua/Data/Out_extreme.csv",
            "label_dir": "/home/weiyuhua/Data/All_data_new"
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": {
        "type":"bce_with_logits_loss"
    },
    "metrics":
    [
        "accuracy",
        "f_measure",
        "macro_f_beta_measure",
        "macro_g_beta_measure",
        "macro_auroc",
        "macro_auprc",
        "challenge_metric"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true,
        "only_scored_class": false
    },
    "evaluater": {
        "result_dir": "saved/",
        "verbosity": 2,
        "visualization": {
            "scatter": true
        }
    }
}
