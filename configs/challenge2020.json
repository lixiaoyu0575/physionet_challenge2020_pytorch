{
    "name": "Challenge2020",
    "n_gpu": 2,
    "arch": {
        "type": "ResNetModel",
        "args": {}
    },
    "data_loader": {
        "type": "ChallnegeDataLoader",
        "args":{
            "data_dir": "/home/yin/code/challenge2020data/Challenge2018_300hz/preprocessed_data_new/",
            "batch_size": 16,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
